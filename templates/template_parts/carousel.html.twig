<style>
        .transparent-image {
            opacity: 0.5;
        }
    </style>

<div class="caroussel mb-5">
    <div class="caroussel-cards mb-5">
    {% set e = 0 %}
    {% set v = 0 %}
    {% set s = 0 %}
    {% set a = 0 %}
    {% set p = 0 %}
    {% set l = 0 %}
        {% for produit in produit %}
            {% if produit.categorie.name == 'Ecommerce' %}
                {% if e < 1 %}
             <div class="cards">
                 <img class="img mb-3" src="{{ asset( 'assets/img/' ~ produit.img) }}" alt="">
                 <a href="{{ path('app_ecommerce') }}" class=" btn-color">
                    <p class="m-auto" id="NomSite">{{ produit.categorie.name }}</p>
                 </a>
             </div>
             {% set e = e + 1 %}
             {% endif %}
             {% elseif produit.categorie.name == 'Vitrine' %}
             {% if v < 1 %}
              <div class="cards">
                 <img class="img mb-3" src="{{ asset( 'assets/img/' ~ produit.img) }}" alt="">
                 <a href="{{ path('app_vitrine') }}" class=" btn-color">
                    <p class="m-auto" id="NomSite">{{ produit.categorie.name }}</p>
                 </a>
             </div>
             {% set e = e + 1 %}
             {% endif %}
             {% elseif produit.categorie.name == 'Sur-mesure' %}
              {% if s < 1 %}
              <div class="cards">
                 <img class="img mb-3" src="{{ asset( 'assets/img/' ~ produit.img) }}" alt="">
                 <a href="{{ path('app_sur_mesure') }}" class=" btn-color">
                    <p class="m-auto" id="NomSite">{{ produit.categorie.name }}</p>
                 </a>
             </div>
             {% set s = s + 1 %}
             {% endif %}
             {% elseif produit.categorie.name == 'App-mobile' %}
             {% if a < 1 %}
              <div class="cards">
                <p class="position-absolute bottom-50 start-50 z-2 translate-middle bold text-lg">A venir !! </p>
                <img class="img mb-3 img-fluid transparent-image" src="{{ asset( 'assets/img/' ~ produit.img) }}" alt="">
                <a href="{{ path('app_sur_mesure') }}" class=" btn-color">
                    <p class="m-auto" id="NomSite">{{ produit.categorie.name }}</p>
                </a>
             </div>
             {% set a = a + 1 %}
             {% endif %}
             {% elseif produit.categorie.name == 'Logo' %}
             {% if l < 1 %}
              <div class="cards">
                <p class="position-absolute bottom-50 start-50 z-2 translate-middle bold text-lg">A venir !! </p>
                <img class="img mb-3 img-fluid transparent-image" src="{{ asset( 'assets/img/' ~ produit.img) }}" alt="">
                <a href="{{ path('app_sur_mesure') }}" class=" btn-color">
                   <p class="m-auto" id="NomSite">{{ produit.categorie.name }}</p>
                </a>
             </div>
             {% set l = l + 1 %}
             {% endif %}
             {% elseif produit.categorie.name == 'Pub' %}
             {% if p < 1 %}
              <div class="cards">
              <p class="position-absolute bottom-50 start-50 z-2 translate-middle bold text-lg">A venir !! </p>
                <img class="img mb-3 img-fluid transparent-image" src="{{ asset( 'assets/img/' ~ produit.img) }}" alt="">
                <a href="{{ path('app_sur_mesure') }}" class=" btn-color">
                    <p class="m-auto" id="NomSite">{{ produit.categorie.name }}</p>
                 </a>
             </div>
             {% set p = p + 1 %}
             {% endif %}
        {% endif %}
    {% endfor %}
    </div>
    <div class="control_caroussel mt-4">
             <button class="btn btn-order fw-bold previous">previous</button>
             <button class="btn btn-order fw-bold ms-5 next">next</button>
    </div>
</div>