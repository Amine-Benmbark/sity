<div class="caroussel mb-5">
    <div class="caroussel-cards mb-5">
            {% set i = 0 %}
             {% for produit in produit %}
                 {% if i >= 3 %}
             <div class="cards">
                 <img class="img mb-3" src="{{ asset( 'assets/img/' ~ produit.img) }}" alt="">
                 <a href="{{ path('app_panier') }}" class="btn-color">
                    <p class="m-auto" id="NomSite">Ajouter au panier</p>
                 </a>
             </div>
              {% endif %}
                {% set i = i + 1 %}
                  {% endfor %}
    </div>
    <div class="control_caroussel mt-4">
             <button class="btn btn-order fw-bold previous">previous</button>
             <button class="btn btn-order fw-bold ms-5 next">next</button>
    </div>
</div>