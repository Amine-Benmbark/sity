{% extends 'base.html.twig' %}

{% block title %}Hello CommandeController!{% endblock %}

{% block body %}
    {% block header %}{% endblock %}
    <table class="container mb-5">
        <thead class="mb-5">
            <tr>
                <th class="m-5">Nom</th>
                <th class="m-5">Prix</th>
                <th class="m-5">Description</th>
                <th class="m-5">Image</th>
            </tr>
        </thead>
        <tbody class="mt-5">
            {% for produit in produitsId %}
                <tr>
                    <td>{{produit.produit.name}}</td>
                    <td>{{produit.produit.prix}}€</td>
                    <td>{{produit.produit.description}}</td>
                    <td> <img  src="{{ asset('assets/img/' ~ produit.produit.img)}}" alt="ffff"/></td>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">Aucun produit trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
        {# <td>Total: {{produit.produit.total}}</td> #}
        <td>Total: {{total}}€</td>
        <td>
            <button class="btn m-auto" href=" {{ path('app_stripe') }} ">
                <a class="btn btn-order --beige" href=" {{ path('app_stripe') }} ">Passer au paiement</a>
            </button>
        </td>
        <td>
            <button class="btn m-auto" href=" {{ path('app_panier') }} ">
                <a class="btn btn-order --beige" href=" {{ path('app_panier') }} ">Changer votre commandes</a>
            </button>
        </td>
    </table>
{% endblock %}
