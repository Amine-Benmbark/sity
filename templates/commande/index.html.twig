{% extends 'base.html.twig' %}

{% block title %}Ma commande{% endblock %}

{% block body %}
    {% block header %}{% endblock %}
<style>
  .custom-img-size {
    width: 150px;
    height: auto;
  }
</style>
    <div class="container">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                    {% for produit in app.user.panier.article %}
                         <tr>
                            <td>{{ produit.produit.name }}</td>
                            <td>{{ produit.produit.prix }}€</td>
                            <td><img src="{{ asset('assets/img/' ~ produit.produit.img) }}" alt="image produit" class="img-fluid custom-img-size"></td>
                        </tr>  
                    {% else %}
                       
                        <tr>
                            <td colspan="4 mb-5"><p class=" merriweather">Aucun produit trouvé.</p></td>
                        </tr> 
                  
                
                   {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3">Total: {{ total }}€</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="row">
            <div class="col-12 col-sm-6 mb-3">
                <a class="btn btn-order btn-block btn-lg btn-beige" href="{{ path('app_stripe') }}">Passer au paiement</a>
            </div>
            <div class="col-12 col-sm-6 mb-3">
                <a class="btn btn-order btn-block btn-lg btn-beige" href="{{ path('app_panier') }}">Changer votre commande</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}