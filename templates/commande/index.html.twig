{% extends 'base.html.twig' %}

{% block title %}Hello CommandeController!{% endblock %}

{% block body %}
  {% block header %}{% endblock %}
  <div class="container mb-5">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Nom</th>
            <th>Prix</th>
            <th>Description</th>
            <th>Image</th>
          </tr>
        </thead>
        <tbody>
          {% for produit in produitsId %}
            <tr>
              <td>{{ produit.produit.name }}</td>
              <td>{{ produit.produit.prix }}€</td>
              <td>{{ produit.produit.description }}</td>
              <td>
                <img src="{{ asset('assets/img/' ~ produit.produit.img) }}" alt="ffff" class="img-fluid" style="max-height: 200px; width: auto;" />
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="4">Aucun produit trouvé.</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
    <div class="row">
      <div class="col-md-6">
        <p>Total: {{ total }}€</p>
      </div>
      <div class="col-md-6">
        <div class="d-flex justify-content-end">
          <a class="btn btn-order btn-beige mx-2" href="{{ path('app_stripe') }}">Passer au paiement</a>
          <a class="btn btn-order btn-beige mx-2" href="{{ path('app_panier') }}">Changer votre commande</a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
