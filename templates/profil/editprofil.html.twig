{% block body %}

{% block header %} {% endblock %}
    
    <h1>Modifier mes coordonnées</h1>
    
    <div>
    <div>
        <p>Nom:</p>
            {{ form_widget(form.name, {'attr': {'class': 'input-color'}}) }}
