{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block header %}{% endblock %}

{% block body %}
    <h1 class"=h1">Inscris toi !!</h1>
    <form class="row container m-auto ">
    <div class="col-md-6 col-12">
        <label for="validationServer01" class="form-label">Prenom:</label>
        <input type="text" class="form-control input-color w-50 mb-3" id="validationServer01" value="" required>
        {# <div class="valid-feedback">
        Looks good!
        </div> #}
    </div>
    <div class="col-md-6 col-12">
        <label for="validationServer02" class="form-label">Nom:</label>
        <input type="text" class="form-control input-color w-50 mb-3" id="validationServer02" value="" required>
        <div class="valid-feedback">
        Looks good!
        </div>
    </div>
    <div class="col-md-6 col-12">
        <label for="validationServer02" class="form-label">Tél:</label>
        <input type="tel" class="form-control input-color w-50 mb-3" id="validationServer02" pattern="[0-9]{2}.[0-9]{2}.[0-9]{2}.[0-9]{2}.[0-9]{2}" value="" required>
        <div class="valid-feedback">
        Looks good!
        </div>
    </div>
    <div class="col-md-6 col-12">
        <label for="validationServer04" class="form-label">Email:</label>
        <input type="email" class="form-control input-color w-50 mb-3" id="validationServer04" aria-describedby="validationServer04Feedback" required>
        <div id="validationServer04Feedback" class="invalid-feedback">
        Please provide a valid city.
        </div>
    </div>
    <div class="col-md-6 col-12">
        <label for="validationServer03" class="form-label">Ville:</label>
        <input type="text" class="form-control input-color w-50 mb-3" id="validationServer03" aria-describedby="validationServer03Feedback" required>
        <div id="validationServer03Feedback" class="invalid-feedback">
        Please provide a valid city.
        </div>
    </div>
    <div class="form-label col-md-6 col-12">
        <label for="floatingTextarea2">Vos besoins:</label>
        <textarea class="form-control input-color w-50 mb-3" placeholder="Décrivez nous vos besoins" id="floatingTextarea2" style="height: 100px"></textarea>
    </div>
    <div class="col-6">
        <div class="form-check">
        <input class="form-check-input input-color" type="checkbox" value="" id="invalidCheck3" aria-describedby="invalidCheck3Feedback" required>
        <label class="form-check-label" for="invalidCheck3">
            Agree to terms and conditions
        </label>
        <div id="invalidCheck3Feedback" type="checkbox" class="invalid-feedback">
            You must agree before submitting.
        </div>
        </div>
    </div>
    <div class="col-12 m-auto">
        <button id="submit-inscription" class="btn btn-order fw-bold" type="submit">Submit form</button>
    </div>
    </form>
      {% block javascript %}
  <script src="./asset/Boostrap/js/bootstrap.bundle.min.js"></script>
  {% endblock %}  
{% endblock %}

