{% extends 'base.html.twig' %}

{% block title %}  Admin produit{% endblock %}

{% block body %}

    {% block header %} {% endblock %}
    <h1>Admin produit</h1>

    {% for produit in produit %}
     <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">name</th>
                <th scope="col">prix</th>
                <th scope="col">image</th>
                <th scope="col">description</th>
                <th scope="col">categorie</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                    <td>{{ produit.name }}</td>
                    <td>{{ produit.prix }}â‚¬</td>
                    <td class="ml-5" ><img class="w-25 h-25" src="{{ asset( 'assets/img/' ~ produit.img) }}"></td>
                    <td>{{ produit.description }}</td>
                    <td>{{ produit.categorie.name }}</td>
                    <td>
                        <a class="btn" href="{{ path('app_add_produit') }}"><p class="p_produit"> Ajouter un produit </p></a>
                        <a class="btn" href="{{ path('app_edit_produit', {'id': produit.id}) }}"><p class="p_produit"> Modifier un produit </p></a>
                        <a class="btn" href="{{ path('app_supp_produit', {'id': produit.id}) }}">><p class="p_produit"> Supprimer un produit </p></a>
                    </td>
            </tr>
            
        </tbody>
    </table>
    {% endfor%}
{% endblock %}